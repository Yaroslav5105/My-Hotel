                        <li class="nav-item">
                            <a class="nav-link" href="/rooms/List/Стандарт">Стандарт </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/rooms/List/fuel">Вип номер </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " href="/HotelRoom/">Карзина</a>
                        </li>
                    </ul>
                    <form class="form-inline mt-2 mt-0 -md-0">
                        <input class="form-control me-2" type="text" placeholder="Поиск" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button>
                    </form>
                </div>
            
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div>
    <footer class="container">
        <p class="float-end"><a href="#">Back to top</a></p>
        <p>© 2021 все права защищены · <a href="#">соглашение</a> </p>
